<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/9b14dcfed3.js" crossorigin="anonymous"></script>
  <title>Products</title>
  <style>
    .card {
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 10px;
      margin: 10px;
      width: 300px;
      display: inline-block;
      text-align: center;
      position: relative;
    }

    .card img {
      max-width: 100%;
      height: auto;
      max-height: 150px;
      object-fit: cover;
    }

    .card:hover {
      box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
      transform: translateY(-5px);
    }

    a {
      text-decoration: none;
      color: inherit;
    }

    span {
      padding: 100px;
    }

    .button-container {
      display: flex;
      justify-content: center;
      position: absolute;
      bottom: 20px;
      left: 0;
      right: 0;
    }

    .card-buttons {
      margin: 0 8px;
    }

    .no-products {
      text-align: center;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .btn-secondary {
      position: absolute;
      margin-top: 2%;
      margin-left: 7%;
    }

    .alert-container {
      position: fixed;
      top: 11%;
      left: 50%;
      transform: translateX(-50%);
      z-index: 1000;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 50px;
      opacity: 1;
      transition: opacity 0.5s ease-in-out;
      animation: fadeOut 4s forwards;
    }

    @keyframes fadeOut {
      0% {
        opacity: 1;
      }

      100% {
        opacity: 0;
      }
    }
  </style>
</head>

<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary" data-bs-theme="dark">
    <div class="container-fluid">
      
            <a class="navbar-brand" href="/products"><i class="fa-solid fa-cart-shopping" style="color: #ffffff; margin: 0 10px;"></i>Bonstay Cart</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/products">Home</a>
          </li>
          <% if(!category && !model) { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Category
              </a>
              <ul class="dropdown-menu">
                <li>
                  <form action="/products" method="get">
                    <button class="dropdown-item">Mobile</button>
                    <input type="hidden" name="category" value="mobile">
                  </form>
                </li>
                <li>
                  <form action="/products" method="get">
                    <button class="dropdown-item">Laptop</button>
                    <input type="hidden" name="category" value="laptop">
                  </form>
                </li>
                <li>
                  <form action="/products" method="get">
                    <button class="dropdown-item">Camera</button>
                    <input type="hidden" name="category" value="camera">
                  </form>
                </li>
              </ul>
            </li>
          <% } else if(category === 'mobile') { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Model
              </a>
              <ul class="dropdown-menu">
                <li>
                  <form action="/products" method="get">
                    <button class="dropdown-item">Apple</button>
                    <input type="hidden" name="model" value="apple">
                  </form>
                </li>
                <li>
                  <form action="/products" method="get">
                    <button class="dropdown-item">Realme</button>
                    <input type="hidden" name="model" value="realme">
                  </form>
                </li>
                <li>
                  <form action="/products" method="get">
                    <button class="dropdown-item">Samsung</button>
                    <input type="hidden" name="model" value="samsung">
                  </form>
                </li>
                <li>
                  <form action="/products" method="get">
                    <button class="dropdown-item">Vivo</button>
                    <input type="hidden" name="model" value="vivo">
                  </form>
                </li>
              </ul>
            </li>
          <% } else if(category === 'laptop') { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Model
              </a>
              <ul class="dropdown-menu">
                <li>
                  <form action="/products" method="get">
                    <button class="dropdown-item">Dell</button>
                    <input type="hidden" name="model" value="dell">
                  </form>
                </li>
                <li>
                  <form action="/products" method="get">
                    <button class="dropdown-item">HP</button>
                    <input type="hidden" name="model" value="hp">
                  </form>
                </li>
                <li>
                  <form action="/products" method="get">
                    <button class="dropdown-item">Lenova</button>
                    <input type="hidden" name="model" value="lenova">
                  </form>
                </li>
              </ul>
            </li>
          <% } else if(category === 'camera') { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Model
              </a>
              <ul class="dropdown-menu">
                <li>
                  <form action="/products" method="get">
                    <button class="dropdown-item">Nikon</button>
                    <input type="hidden" name="model" value="nikon">
                  </form>
                </li>
                <li>
                  <form action="/products" method="get">
                    <button class="dropdown-item">Sony</button>
                    <input type="hidden" name="model" value="sony">
                  </form>
                </li>
              </ul>
            </li>
          <% } %>

          <% if(isUserLoggedIn) { %>
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/cart">Cart <span style="margin: 0; padding: 3px;"
                  class="badge text-bg-secondary">
                  <%= count %>
                </span></a>
            </li>
        </ul>
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0" style="margin-right: 1%;">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fa-solid fa-user" style="color: #c3c6d1;"></i>
              <%= loggedInUser %>
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/user-profile">Profile</a></li>
              <li><a class="dropdown-item" href="#">My Orders</a></li>
              <li><a class="dropdown-item" href="/logout">Log out</a></li>
            </ul>
          </li>
        </ul>
        <% } else { %>
          </ul>
          <form action="/login" method="get" style="margin-right: 1%;">
            <button class="btn btn-sm btn-success" type="submit">Login</button>
          </form>
          <% } %>

            <form class="d-flex" role="search" action="/products" method="get">
              <input class="form-control me-2" type="search" name="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-light" type="submit">Search</button>
            </form>
      </div>
    </div>
  </nav>

  <% if(products.length === 0) { %>
    <div class="no-products">
      <p style="font-size: 35px; margin-top: 5%;">No Products Available!!</p>
    </div>
    <div class="no-products">
      <a type="button" class="btn btn-primary" href="/products">Home</a>
    </div>
  <% } else { %>
    <% if(category || model) { %>
      <div>
        <a type="button" class="btn btn-secondary" href="javascript:history.back()">Go Back</a>
      </div>
      <% } %>
      <% if(productAddedToCart){ %>
        <div id="alert-container" class="alert-container">
          <div class="alert alert-success" role="alert">
            Product added to cart successfully
          </div>
        </div>
      <% } %>
  
    <div class="container" style="margin-top: 5%; margin-left: 5%;">
      <% products.forEach(function(product) { %>
        <a href="/products/<%= product.productId %>">
          <div class="card">
            <img src="<%= product.imageURL %>" alt="<%= product.name %>">
            <div class="card-body">
              <div>
                <h5 class="card-title">
                  <%= product.name %>
                </h5>
                <p class="card-text text-body-secondary">
                  <%= product.description %>
                </p>
                <p class="card-text"><strong>Price: ₹<%= product.price.toLocaleString('en-IN') %></strong></p>
                <span></span><span></span>
                <div class="button-container">
                  <form action="#" method="post" class="card-buttons">
                    <button class="btn btn-success">Book Now</button>
                  </form>
                  <form action="/cart/add" method="post" class="card-buttons">
                    <input type="hidden" name="productId" value="<%= product.productId %>">
                    <button class="btn btn-outline-success">Add to cart</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </a>
        <% }); %>
    </div>
  <% } %>

</body>

</html>