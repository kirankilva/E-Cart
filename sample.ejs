<section class=" py-3 py-md-5">
    <div class="container ">
        <div class="row justify-content-center">
            <div class="col-xxl-7">
                <div class="card border border-light-subtle rounded-3 shadow-lg">
                    <div class="card-body p-3 p-md-4 p-xl-5">
                        <h2 class="fs-6 fw-normal text-center text-secondary md-4">Create your account </h2>
                        <form action="/register" method="post">
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-5">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" name="name" id="name"
                                            value="<%= (typeof inputData!='undefined')?inputData.name:'' %>"
                                            placeholder="Name">
                                        <label for="name" class="form-label">Name</label>
                                        <span>
                                            <%= (typeof errors!='undefined' && typeof errors.name!='undefined' )?errors.name.msg:'' %> %>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-7">
                                    <div class="form-floating mb-3">
                                        <input type="email" class="form-control" name="email" id="email"
                                        value="<%= (typeof inputData!='undefined')?inputData.email:'' %>"
                                            placeholder="Email">
                                        <label for="email" class="form-label">Email</label>
                                        <span>
                                            <%= (typeof errors!='undefined' && typeof errors.email!='undefined' )?errors.email.msg:'' %> %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-8">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" name="address" id="address"
                                            value="<%= (typeof inputData!='undefined')?inputData.address:'' %>"
                                            placeholder="Address">
                                        <label for="address" class="form-label">Address</label>
                                        <span>
                                            <%= (typeof errors!='undefined' && typeof errors.address!='undefined' )?errors.address.msg:'' %> %>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" name="address" id="address"
                                            value="<%= (typeof inputData!='undefined')?inputData.address:'' %>"
                                            placeholder="Address">
                                        <label for="address" class="form-label">Address</label>
                                        <span>
                                            <%= (typeof errors!='undefined' && typeof errors.address!='undefined' )?errors.address.msg:'' %> %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-7">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" name="phone" id="phone"
                                            value="<%= (typeof inputData!='undefined')?inputData.phone:'' %>"
                                            placeholder="Phone">
                                        <label for="phone" class="form-label">Phone</label>
                                        <span>
                                            <%= (typeof errors!='undefined' && typeof errors.phone!='undefined' )?errors.phone.msg:'' %> %>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-5">
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control" name="password" id="password"
                                            value="<%= (typeof inputData!='undefined')?inputData.password:'' %>"
                                            placeholder="Password">
                                        <label for="password" class="form-label">Password</label>
                                        <span>
                                            <%= (typeof errors!='undefined' && typeof errors.password!='undefined' )?errors.password.msg:'' %> %>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row gy-2 overflow-hidden">
                                <div class="col-22">
                                    <div class="d-grid my-3">
                                        <button class="btn btn-success btn-lg" type="submit">REGISTER</button>
                                    </div>
                                </div>
                                <div class="col-13">
                                    <p class="m-0 text-secondary text-center">Already have an account?
                                        <a class="link-primary text-decoration-none" href="/user/login">Login</a>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>